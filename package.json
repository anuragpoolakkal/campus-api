{
    "name": "campus-api",
    "version": "1.0.0",
    "description": "API for Campus Management System",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "nodemon index.js",
        "format:check": "prettier --check .",
        "format:write": "prettier --write ."
    },
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "joi": "^17.12.2",
        "jsonwebtoken": "^9.0.2",
        "log4js": "^6.9.1",
        "mongoose": "^8.2.2",
        "rotating-file-stream": "^3.2.1"
    },
    "devDependencies": {
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "morgan": "^1.10.0",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "all",
        "arrowParens": "always",
        "printWidth": 100
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && npm run format:write && git add ."
        }
    }
}
